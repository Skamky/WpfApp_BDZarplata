<Page x:Class="WpfApp_КурсоваяРабота2021_BDZarplata.Pages.Page_Bughl_AddEdit_base"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_КурсоваяРабота2021_BDZarplata.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Bughl_AddEdit_base">
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Label>Год</Label>
            <Label>Значение</Label>
            
        </StackPanel>
        <StackPanel Grid.Column="1">
           
            <TextBox x:Name="TB_Year" Margin="0,8,0,0" PreviewTextInput="intOnly_PreviewTextInput"></TextBox>
            <TextBox x:Name="TB_Znach" Margin="0,8,0,0" PreviewTextInput="intOnly_PreviewTextInput"></TextBox>
        </StackPanel>
        <Button x:Name="BtnSave" Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Column="1" Click="BtnSave_Click"/>
    </Grid>
</Page>
