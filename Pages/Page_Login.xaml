<Page x:Class="WpfApp_КурсоваяРабота2021_BDZarplata.Pages.Page_Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp_КурсоваяРабота2021_BDZarplata.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_Login">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Табельный номер сотрудника</Label>
            <TextBox x:Name="TB_idSotrudnik"></TextBox>
            <Label>Пароль</Label>
            <TextBox x:Name="TB_Password"></TextBox>
            <Label>Адрес для подключения</Label>
            <TextBox x:Name="TB_IpPc" Text="localhost" IsEnabled="False"></TextBox>
            <CheckBox x:Name="CB_IPPC_Localhost" IsChecked="True" Click="CB_IPPC_Localhost_Click">Локальная База данных</CheckBox>
            <Label>Название Базы Данных</Label>
            <TextBox x:Name="TB_DBName" IsEnabled="False" Text="BD_Zarplata"></TextBox>
            <CheckBox x:Name="CB_BD_NAmeDef" IsChecked="True" Click="CB_BD_NAmeDef_Click">По Умолчанию</CheckBox>
            <Button x:Name="BtnLogin" Click="BtnLogin_Click">Вход</Button>
        </StackPanel>
        
    </Grid>
</Page>
